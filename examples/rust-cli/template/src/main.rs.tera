use clap::Parser;

#[derive(Parser)]
#[command(name = "{{ project_name }}", about = "{{ description }}", version)]
struct Cli {
    /// Name to greet
    #[arg(short, long, default_value = "world")]
    name: String,
}

fn main() {
    let cli = Cli::parse();
    println!("Hello, {}!", cli.name);
}
